<UserControl x:Class="OpenBoardAnim.Views.EditorCanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
             xmlns:local="clr-namespace:OpenBoardAnim.Views"
             xmlns:s="clr-namespace:OpenBoardAnim.Controls"
             xmlns:models="clr-namespace:OpenBoardAnim.Models"
             xmlns:utils="clr-namespace:OpenBoardAnim.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <!-- MoveThumb Template -->
        <ControlTemplate x:Key="MoveThumbTemplate" TargetType="{x:Type s:MoveThumb}">
            <Rectangle Fill="Transparent" Stroke="Transparent"/>
        </ControlTemplate>

        <!-- ResizeDecorator Template -->
        <ControlTemplate x:Key="ResizeDecoratorTemplate" TargetType="{x:Type Control}">
            <Grid>
                <s:ResizeThumb Width="7" Height="7" Cursor="SizeNWSE" Margin="0 0 -6 -6"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

                <s:ResizeThumb Width="7" Height="7" Cursor="SizeNWSE" Margin="-6 -6 0 0"
                       VerticalAlignment="Top" HorizontalAlignment="Left">
                    <s:ResizeThumb.Style>
                        <Style TargetType="{x:Type s:ResizeThumb}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.UseUniformScale, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </s:ResizeThumb.Style>
                </s:ResizeThumb>

                <s:ResizeThumb Width="7" Height="7" Cursor="SizeNWSE" Margin="0 -6 -6 0"
                       VerticalAlignment="Top" HorizontalAlignment="Right">
                    <s:ResizeThumb.Style>
                        <Style TargetType="{x:Type s:ResizeThumb}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.UseUniformScale, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </s:ResizeThumb.Style>
                </s:ResizeThumb>

                <s:ResizeThumb Width="7" Height="7" Cursor="SizeNWSE" Margin="-6 0 0 -6"
                       VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <s:ResizeThumb.Style>
                        <Style TargetType="{x:Type s:ResizeThumb}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.UseUniformScale, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </s:ResizeThumb.Style>
                </s:ResizeThumb>
            </Grid>
        </ControlTemplate>

        <!-- RotateThumb Template -->
        <ControlTemplate x:Key="RotateThumbTemplate" TargetType="{x:Type s:RotateThumb}">
            <Grid>
                <Ellipse Width="10" Height="10" Fill="White" Stroke="Black" StrokeThickness="1"/>
            </Grid>
        </ControlTemplate>

        <!-- Designer Item Template-->
        <ControlTemplate x:Key="DesignerItemTemplate" TargetType="ContentControl">
            <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentControl}}}">
                <s:MoveThumb Template="{StaticResource MoveThumbTemplate}" Cursor="SizeAll"/>
                <Control Template="{StaticResource ResizeDecoratorTemplate}"/>
                <s:RotateThumb Template="{StaticResource RotateThumbTemplate}" Cursor="Hand"
                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-14,0,0"/>
                <ContentPresenter Content="{TemplateBinding ContentControl.Content}" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                    <ContentPresenter.RenderTransform>
                        <RotateTransform Angle="{Binding Content.Rotation, RelativeSource={RelativeSource TemplatedParent}}"/>
                    </ContentPresenter.RenderTransform>
                </ContentPresenter>
            </Grid>
        </ControlTemplate>
        <utils:BrushConverter x:Key="BrushConverter"/>
        <utils:DrawingGroupToGeometryConverter x:Key="DrawingGroupToGeometryConverter"/>
        <DataTemplate DataType="{x:Type models:DrawingModel}">
            <ContentControl Template="{StaticResource DesignerItemTemplate}">
                <Path Data="{Binding ImgDrawingGroup, Converter={StaticResource DrawingGroupToGeometryConverter}}"
                      Stroke="{Binding Color, Converter={StaticResource BrushConverter}}"
                      StrokeThickness="3" Fill="Transparent" Stretch="Fill" IsHitTestVisible="False"/>
            </ContentControl>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:TextModel}">
            <ContentControl Template="{StaticResource DesignerItemTemplate}">
                <Path Data="{Binding TextGeometry}"
                      Fill="{Binding Color, Converter={StaticResource BrushConverter}}"
                      Stroke="{Binding Color, Converter={StaticResource BrushConverter}}"
                      StrokeThickness="1" Stretch="Fill" IsHitTestVisible="False"/>
            </ContentControl>
        </DataTemplate>
    </UserControl.Resources>
    <ListBox ItemsSource="{Binding SceneGraphics}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Background="White"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Canvas.Left" Value="{Binding X,Mode=TwoWay}"/>
                <Setter Property="Canvas.Top" Value="{Binding Y,Mode=TwoWay}"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <ContentControl Template="{StaticResource DesignerItemTemplate}" Content="{Binding}"
                                Width="{Binding Width,Mode=TwoWay}" Height="{Binding Height,Mode=TwoWay}"/>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>    
</UserControl>
