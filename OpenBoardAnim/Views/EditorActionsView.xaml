<UserControl x:Class="OpenBoardAnim.Views.EditorActionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBoardAnim.Views"
             xmlns:models="clr-namespace:OpenBoardAnim.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:utils="clr-namespace:OpenBoardAnim.Utils"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <utils:BrushConverter x:Key="BrushConverter"/>
        <DataTemplate x:Key="RowSlotTemplate">
            <Grid>
                <ContentControl Content="{Binding Item}"
                                ContentTemplate="{StaticResource GraphicItemTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Item}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
                <Border Height="170" CornerRadius="10"
                        BorderBrush="#22000000" BorderThickness="1" Background="Transparent"
                        Opacity="0.3" Visibility="Collapsed" Margin="0 0 0 6">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Item}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="GraphicItemTemplate">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0" MinWidth="220" HorizontalAlignment="Stretch" Height="170" CornerRadius="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.RowSpan="7" Content="{Binding}"/>

                    <TextBlock Grid.Column="1" VerticalAlignment="Center">Delay:</TextBlock>
                    <hc:NumericUpDown Grid.Column="2" Height="30" HorizontalAlignment="Stretch" Style="{StaticResource NumericUpDownPlus}"
                                      Value="{Binding Delay,Mode=TwoWay}" Minimum="0" ValueFormat="0.0s"/>

                    <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">Duration:</TextBlock>
                    <hc:NumericUpDown Grid.Column="2" Grid.Row="1" Height="30" HorizontalAlignment="Stretch" Style="{StaticResource NumericUpDownPlus}"
                                      Value="{Binding Duration,Mode=TwoWay}" Minimum="0.1" ValueFormat="0.0s"/>

                    <TextBlock Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">Rotate:</TextBlock>
                    <hc:NumericUpDown Grid.Column="2" Grid.Row="2" Height="30" HorizontalAlignment="Stretch"
                                      Style="{StaticResource NumericUpDownPlus}"
                                      Value="{Binding Rotation,Mode=TwoWay}"
                                      Minimum="-360" Maximum="360" ValueFormat="0deg"
                                      PreviewKeyDown="NumericUpDown_PreviewKeyDown"/>

                    <TextBlock Grid.Column="1" Grid.Row="3" VerticalAlignment="Center">Color:</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Horizontal">
                        <Rectangle Width="18" Height="18" Stroke="Black" Margin="0,0,6,0"
                                   Fill="{Binding Color, Converter={StaticResource BrushConverter}}"/>
                        <TextBox Width="90" Height="24" Text="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Grid.Row="4" VerticalAlignment="Center">Scale:</TextBlock>
                    <CheckBox Grid.Column="2" Grid.Row="4" Content="Universal"
                              IsChecked="{Binding UseUniformScale, Mode=TwoWay}"/>

                    <TextBlock Grid.Column="1" Grid.Row="5" VerticalAlignment="Center">Column:</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" Text="{Binding Column}"/>

                    <TextBlock Grid.Column="1" Grid.Row="6" VerticalAlignment="Center">Row:</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" Text="{Binding RowIndex}"/>
            </Grid>
        </Border>
    </DataTemplate>
        <DataTemplate DataType="{x:Type models:DrawingModel}">
            <Image>
                <Image.Source>
                    <DrawingImage Drawing="{Binding ImgDrawingGroup}"/>
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:TextModel}">
            <Path Data="{Binding TextGeometry}" Fill="Black" Stroke="Black" StrokeThickness="1" VerticalAlignment="Center"/>
        </DataTemplate>
    </UserControl.Resources>
    <Border Background="{DynamicResource BackgroundBrush}" Width="{Binding ActionsPanelWidth}" MinWidth="220" BorderThickness="1,0,0,0" BorderBrush="{DynamicResource BorderBrush}">
        <Grid Margin="20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0,20,0,10" Text="Action" Style="{StaticResource TextBlockTitle}" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonSuccess}" Command="{Binding SaveProjectCommand}">Save</Button>
                    <Button Margin="10 10" Style="{StaticResource ButtonPrimary}" Command="{Binding PreviewProjectCommand}">Preview</Button>
                    <Button Command="{Binding ExportProjectCommand}">Export</Button>
                    <Button Margin="10 10" Style="{StaticResource ButtonDanger}" Command="{Binding CloseProjectCommand}">Close</Button>
                </StackPanel>
                <TextBlock Margin="0 10" Style="{StaticResource TextBlockSubTitle}" HorizontalAlignment="Left">Settings</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Button HorizontalAlignment="Left" Command="{Binding LaunchSceneSettingsCommand}">Scene Settings</Button>
                    <Button Margin="10 0" HorizontalAlignment="Left" Command="{Binding LaunchProjectSettingsCommand}">Project Settings</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 6 0 0">
                    <TextBlock VerticalAlignment="Center">Panel Width:</TextBlock>
                    <Slider Margin="8 0 0 0" Width="140" Minimum="220" Maximum="520"
                            Value="{Binding ActionsPanelWidth, Mode=TwoWay}"/>
                </StackPanel>
                <TextBlock Margin="0 10" Style="{StaticResource TextBlockSubTitle}" HorizontalAlignment="Left">Items</TextBlock>
            </StackPanel>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 0 10 0" Width="260">
                                <TextBlock Margin="0 0 0 6" Text="{Binding Column, StringFormat=Column {0}}"/>
                                <ListBox ItemsSource="{Binding Rows}"
                                         ItemTemplate="{StaticResource RowSlotTemplate}"
                                         HorizontalContentAlignment="Stretch"
                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                         SelectedValuePath="Item"
                                         SelectedValue="{Binding DataContext.SelectedGraphic, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 10">
                <Button Command="{Binding MoveUpCommand}">Move Up</Button>
                <Button Margin="5 0 0 0" Command="{Binding MoveDownCommand}">Move Down</Button>
                <Button Margin="10 0 0 0" Command="{Binding MoveLeftCommand}">Move Left</Button>
                <Button Margin="5 0 0 0" Command="{Binding MoveRightCommand}">Move Right</Button>
                <Button Margin="60 0" Style="{StaticResource ButtonDanger}" Command="{Binding DeleteItemCommand}" ToolTip="Delete Item" Content="{materialDesign:PackIcon Delete}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>




